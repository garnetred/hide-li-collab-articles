{
  "manifest_version": 3,
  "name": "Disable Hulu Trailers",
  "version": "0.0.1",
  "description": "This Chrome browser extension disables the autoplaying video trailers on the Hulu home page.",
   "permissions": ["scripting"],
  "icons": {
    "16": "images/hide-emoji-16.png",
    "32": "images/hide-emoji-32.png",
    "48": "images/hide-emoji-48.png",
    "128": "images/hide-emoji-128.png"
},
"background": {
    "service_worker": "scripts/background.js"
},
"web_accessible_resources": [
  {
    "resources": ["css/*.css"],
    "extension_ids": [
      ""
    ]
    }
  ],
"content_scripts": [
    {
        "matches": [
        "*://www.someurl.com/*"
      ],
      "css": ["css/global.css"]
    }
],
  "host_permissions": [
    "*://www.someurl.com/*"
  ],
  "action": {
      "default_popup": "popup.html"
  }

}